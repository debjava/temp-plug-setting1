<configuration>
    <!-- Console Appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.home}/DDLABS/logs/ddlab-plugin.log</file> <!-- Log file path relative to the plugin's working directory -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/plugin-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <!-- Each file should be at most 10MB -->
            <maxFileSize>10MB</maxFileSize>
            <!-- Total size of all archive files, if total size > 1GB, then old files are deleted -->
            <totalSizeCap>1GB</totalSizeCap>
            <!-- 30 days of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="DEBUG"> <!-- Set the default logging level (e.g., INFO, DEBUG, TRACE) -->
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Optional: Specific logger for your plugin's package -->
<!--    <logger name="com.yourcompany.yourplugin" level="DEBUG" additivity="false">-->
<!--        <appender-ref ref="STDOUT" />-->
<!--        <appender-ref ref="FILE" />-->
<!--    </logger>-->

</configuration>